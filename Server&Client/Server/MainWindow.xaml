<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Server" Height="270" Width="350" Background="Black">
    <Grid>
        <StackPanel>
            <Button Content="Start Server" Click="StartServer_Click" Margin="10" Background="White" Foreground="Black"/>
            <ListBox x:Name="MessagesList" Height="170" Width="300" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
