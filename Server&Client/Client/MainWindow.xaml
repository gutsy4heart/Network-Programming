<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="290" Width="420" Background="CadetBlue">
    <Grid>
        <StackPanel>
            <TextBox x:Name="MessageInput" Width="200" Margin="10"/>
            <Button Content="Send Message" Click="SendMessage_Click" Width="100" Margin="10"
                    Background="GreenYellow" Foreground="White"/>
            <ListBox x:Name="MessagesList" Height="170" Width="400" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
