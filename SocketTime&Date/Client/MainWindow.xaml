<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Time Client" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="MessageInput" Width="200" Margin="10"/>
            <Button Content="Send Request" Click="SendMessage_Click" Width="100" Margin="10"/>
            <ListBox x:Name="MessagesList" Height="170" Width="350" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
